<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Me</title>
    <link rel="stylesheet" href="/css/navbar.css " />
    <link rel="stylesheet" href="/css/contact.css" />
     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz@1,9..40&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav>
      <div class="navbar">
        <div class="nav-left">
          <img src="/img/D-logo.png" alt="logo-dumbways" class="img"/>
          <ul>
            <li class="item-collapse">
              <a href="/">Home</a>
            </li>
            <li class="item-collapse">
              <a href="/myproject-detail">My Project</a>
            </li>
           
          </ul>
        </div>
        <div class="nav-right item-collapse">
          <ul>
           {{#if isLogin }}
             <li>
                <p>Welcome, {{user.name}}</p>
             </li>
              <li>
                <a href="/logout">
                <button class="btn-logout">Logout</button>
                </a>
             </li>
                {{else}}
              <li>
                 <a href="/login">Login</a> 
              </li>
              <li>
                 <a href="/register">Register</a>
                {{/if}}
              </li>
              <li>
                 <a href="contact" class="contact">Contact</a>
              </li>
          </ul>
        </div>
        <div class="nav-right" id="hamburger-nav-container">
          <button
            style="background-color: transparent; border: none; cursor: pointer"
            onclick="openHamburger()"
          >
            <i class="fa-2x fa-solid fa-bars"></i>
          </button>
        </div>
      </div>
    </nav>

    <!-- Hamburger Menu -->
    <div class="hamburger-nav-container" id="hamburger-nav-container">
      <div class="container-hamburger">
        <a href="/" class="active"> Home </a>
        <a href="/myproject-detail"> My Project </a>
        <div class="contact-me">
          <a href="contact" class="hamburger-contact-me">Contact</a>
        </div>
      </div>
    </div>

    <!-- Form Contact -->
    <form method="post" action="/login">
      <div class="form-login">
        <h1>GET IN TOUCH</h1>
        <div class="form-input">
          <label>Name</label>
          <input type="text" id="input-name" name="inputName" required />
        </div>
        <div class="form-input">
          <label>Email</label>
          <input type="email" id="input-email" name="inputEmail" required />
        </div>
        <div class="form-input">
          <label>Phone Number</label>
          <input type="text" id="input-number" name="inputNumber" required />
        </div>
        <div class="form-input">
          <label>Subject</label>
          <select id="input-subject" name="inputSubject" required>
            <option hidden>Select</option>
            <option>Frontend</option>
            <option>Backend</option>
            <option>Fullstack</option>
          </select>
        </div>
        <div class="form-input">
          <label>Your Message</label>
          <textarea
            required
            rows="3"
            cols="10"
            class=""
            id="input-message"
            name="inputMessage"
          ></textarea>
        </div>
        <div class="submit">
          <button class="btn-submit" type="button" onclick="submitData()">
            submit
          </button>
        </div>
      </div>
    </form>
    <script src="/javaScript/submitData.js"></script>
    <script src="/javaScript/hamburger.js"></script>
  </body>
</html>
