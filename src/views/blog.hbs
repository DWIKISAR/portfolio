<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/project-detail.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz@1,9..40&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav>
      <div class="navbar">
        <div class="nav-left">
          <ul>
            <li>
              <a href="https://dumbways.id/"
                ><img src="/img/logo.png" alt="logo-dumbways"
              /></a>
            </li>
            <li class="item-collapse">
              <a href="/" >Home</a>
            </li>
            <li class="item-collapse">
              <a href="myproject-detail" >My Project</a>
            </li>
          </ul>
        </div>
        <div class="nav-right item-collapse">
          <ul>
            {{#if isLogin }}
             <li>
                <p>Welcome, {{user.name}}</p>
             </li>
              <li>
                <button class="btn-logout">Logout</button>
             </li>
                {{else}}
              <li>
                 <a href="/login">Login</a> 
              </li>
              <li>
                 <a href="/register">Register</a>
                {{/if}}
              </li>
            <li>
              <a href="contact" class="contact">Contact</a>
            </li>
          </ul>
        </div>
        <div class="nav-right" id="hamburger-menu">
          <button
            style="background-color: transparent; border: none; cursor: pointer"
            onclick="openHamburger()"
          >
            <i class="fa-2x fa-solid fa-bars"></i>
          </button>
        </div>
      </div>
    </nav>

    <!-- Hamburger Menu -->
    <div class="hamburger-nav-container" id="hamburger-nav-container">
      <div class="container-hamburger">
        <a href="/"> Home </a>
        <a href="myproject" class="active" target="_blank"> My Project </a>
        <div class="contact-me">
          <a href="contact" class="hamburger-contact-me">Contact</a>
        </div>
      </div>
    </div>

    <!-- Section Two -->
    <main class="container-two">
      <div class="section-two" id="contents">
      {{#each data}}
        <div class="project-list">
          <div class="project-list-items">
            <img src="/img/{{this.image}}" alt="code" />
            <h1>
              <a href="blog-detail/{{this.id}}" target="_blank" name="title" > {{this.name}}</a>
            </h1>
            <div class="durasi">
              <p class="durasi" name="duration">durasi : {{this.start_date}} 1 month {{this.end_date}}</p>
            </div>
            <p>
              {{this.description}}
            </p>

            <i class="fa-brands fa-node-js"></i>
            <i class="fa-brands fa-react"></i>
            <i class="fa-brands fa-vuejs"></i>
            <i class="fa-brands fa-js"></i> <br />
            <div class="edit">
              <button>
              <a href="/updateBlog/{{this.id}}">Edit</a>
              </button>
              <form method="post" action="/delete-blog/{{this.id}}">
              <button>Delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
      
    </main>
    {{!-- <script src="/javaScript/myproject.js"></script> --}}
    <script src="/javaScript/hamburger.js"></script>
  </body>
</html>
